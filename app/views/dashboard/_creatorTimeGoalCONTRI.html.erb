<div class='money medium-4 small-6 columns'>
Creator: <%= contribution.user.username %>
</div>
<div class='money medium-5 small-6 columns'>
Time:
<% timeLeft = contribution.gift.due_date - Time.now %>
<% minsLeft = timeLeft/60 %>
<% hoursLeft = minsLeft/60 %>
<% daysLeft = hoursLeft/24 %>
<% if daysLeft < 1 %>
  <% if hoursLeft < 1 %>
      <% if minsLeft > 0 %>
        <%= minsLeft.round %> minutes remaining
      <% else %>
        Contribution Over
      <% end %>
  <% else %>
    <%= hoursLeft.round %> hours remaining
  <% end %>
<% else %>
  <%= daysLeft.round %> days remaining
<% end %>
</div>

<div class='money medium-3 columns'>Goal: <%= number_to_currency(contribution.gift.current_total/100, unit: "$") %>/<%= number_to_currency(contribution.gift.price/100, unit: "$")%></div>