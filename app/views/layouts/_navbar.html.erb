<div class="top-bar-bg">
  <div class="contain-to-grid">
    <nav class="top-bar" data-topbar role="navigation">
      <ul class="title-area">
        <li class="name">
          <a href="/"><img src="assets/robin_logo2.svg"/></a>
        </li>
         <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
      </ul>

      <section class="top-bar-section">
        <!-- Right Nav Section -->
        <ul class="right">
          <li class="has-dropdown menu-button">
            <% if current_user %> 
              <a href="#">Menu</a>
            <% else %>
              <a href="#">Sign In</a>
            <% end %>
          </li>
        </ul>
      </section>
    </nav>
  </div>
</div>


<div class="menu-container">
  <div class="contain-to-grid">
    <div class="row">
      <ul class="menu medium-6 large-4 columns right">
          <% if current_user == nil %>
              <!-- LOGIN FORM STARTS -->
              <!--  move to partial -->
              <%= render "/devise/sessions/form" %>
                    
              <!-- LOGIN FORM ENDS -->
            <li>
              <%= link_to "Create Account", new_user_registration_path %>    
            </li>
          <% else %>
            <li>
              <%= link_to "Profile", show_user_path(current_user) %>
            </li>
            <li>  
              <%= link_to "Create Gift Group", new_gift_path %>
            </li>
            <li>
              <%= link_to "Sign Out", sign_out_path, method: 'delete'  %> 
            </li>
          <% end %>
        </ul>
      </div>
    </div>
</div>

