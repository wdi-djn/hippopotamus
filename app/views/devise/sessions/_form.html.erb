<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row">
    <div class="field large-12 columns">
      <%= f.label :email %>
      <%= f.email_field :email %>
    </div>
  </div>

  <div class="row">
    <div class="field large-12 columns">
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off" %>
    </div>
  </div>


  <% if devise_mapping.rememberable? -%>
    <div class="row">

        <div class='field small-4 columns'><%= f.label :remember_me, class: "active" %></div>
        <div class='field small-8 columns checkbox'><%= f.check_box :remember_me %></div>

    </div>
  <% end -%>


  <div class="row">
    <div class="actions large-12 columns">
      <%= f.submit "Log in" %>
    </div>
  </div>
<% end %>
